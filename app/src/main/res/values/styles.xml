<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppCompat.RatingBar.Small.my" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/colorStar</item>
        <item name="android:secondaryProgressTint">#FFFFFF</item>
    </style>

    <style name="Widget.AppCompat.RatingBar.Indicator.my" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressTint">@color/colorStar</item>
        <item name="android:secondaryProgressTint">#ffffff</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
